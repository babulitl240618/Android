<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imagine.bd.hayvenapp">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/NoUiAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Contacts" />
        <activity android:name=".Activity.New_ChatActivity" />
        <activity android:name=".Activity.NewGroupChatActivity" />
        <activity android:name=".Activity.JoinGroupChatActivity" />
        <activity android:name=".Activity.SocialCommittee" />
        <activity android:name=".Activity.CalingActivity" />
        <activity android:name=".Activity.EvryoneNavigetGroupActivity" />
        <activity android:name=".Activity.IncomingCallActivity" />
        <activity android:name=".Activity.CallInfoActivity" />
        <activity android:name=".Activity.ChattingActivity" />
        <activity android:name=".Activity.New_callActivity" />
        <activity android:name=".Activity.MemberSearchActivity" />
        <activity android:name=".Activity.GroupCallActivity" />
        <activity android:name=".Activity.SocialCommiteeCallActivity" />
        <activity android:name=".Activity.JoinGroupCallActivity" />
        <activity android:name=".Activity.JoinGroupCallSequenceActivity" />
        <activity
            android:name=".ConnectActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="appr.tc"
                    android:scheme="https" />
                <data
                    android:host="appr.tc"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".CallActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="fullUser"
            android:theme="@style/CallActivityTheme" />

        <!-- Firebase Notifications -->
        <service android:name=".Service.MyAndroidFirebaseMsgService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Service.MyAndroidFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- ./Firebase Notifications -->


        <!-- <activity android:name=".MainActivity2"></activity> -->
        <activity android:name=".MainActivity2" />
        <activity android:name=".Activity.CallingAcitivity3" />
        <activity android:name=".Activity.SigninActivity"
            android:windowSoftInputMode="stateAlwaysHidden" ></activity>


    </application>

</manifest>